<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_accueil"
    android:weightSum="1"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/S1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight = "0.45"
        android:background="@drawable/film1">
        <RelativeLayout
            android:id="@+id/S2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           >
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button_nouveaute"
                android:background="@android:color/transparent"
                />
           <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="50dp"
               android:gravity="bottom"
               android:layout_gravity="bottom"
               android:layout_alignParentBottom="true"
               android:background="@android:color/white"
               android:alpha="0.4">
               <TextView
                   android:padding="10dp"
                   android:id="@+id/S4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/nouveaute"
                   android:textColor="@android:color/black"
                   android:layout_alignParentBottom="true"
                   android:gravity="center"
                   android:textStyle="bold"

                   android:textSize="20sp" >
               </TextView>

               </RelativeLayout>

    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/S5"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight = "0.45"
        android:background="@drawable/film2">

        <RelativeLayout
            android:id="@+id/s"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button_categorie"
                android:background="@android:color/transparent"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white"
                android:alpha="0.4">
                <TextView
                    android:padding="10dp"
                    android:id="@+id/S6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/categorie"
                    android:textColor="@android:color/black"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textStyle="bold"

                    android:textSize="20sp" >
                </TextView>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/button_moncompte"
        android:text="@string/mon_compte"
        android:layout_weight = "0.1"
        android:background="@color/film_titre_color"
        />
