<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_accueil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="100">

    <!-- nouveautÃ© -->
    <LinearLayout
        android:id="@+id/S1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="30"
        android:background="@android:drawable/dialog_holo_dark_frame"

        android:orientation="vertical"

        >

        <RelativeLayout

            android:id="@+id/RelativeLayout_Film1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_load" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"/>
            <ImageView
                android:id="@+id/ImageView_Film1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/Button_Acceuil_Nouveaute"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:alpha="0.4"
                android:background="@drawable/style_bordure_ombre"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/S4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/nouveaute"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"

                    android:textStyle="bold"></TextView>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    <!-- categore -->
    <LinearLayout
        android:id="@+id/S5"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"

        android:layout_marginRight="5dp"
        android:layout_weight="30"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="vertical">

        <RelativeLayout


            android:id="@+id/RelativeLayout_Film2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_load" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"/>
            <ImageView
                android:id="@+id/ImageView_Film2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/Button_Tout_Les_Films"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:alpha="0.4"
                android:background="@drawable/style_bordure_ombre"

                android:gravity="bottom">

                <TextView

                    android:id="@+id/S6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/tout"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"

                    android:textStyle="bold"></TextView>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    <!-- tout film -->
    <LinearLayout
        android:id="@+id/S52"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="30"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="vertical">

        <RelativeLayout


            android:id="@+id/RelativeLayout_Film3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <ImageView
                android:id="@+id/icon2"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_load" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"/>



            <ImageView
                android:id="@+id/ImageView_Film3"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"

                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />




            <Button
                android:id="@+id/Button_Acceuil_Categorie"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:alpha="0.4"
                android:background="@drawable/style_bordure_ombre"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/S62"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/categorie"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <!-- mon compte -->
    <Button
        android:id="@+id/Button_Acceuil_MonCompte"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/style_bordure_ombre"
        android:text="@string/mon_compte" />
</LinearLayout>
