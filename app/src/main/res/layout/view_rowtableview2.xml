<RelativeLayout android:id="@+id/listListener"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"

                android:layout_height="200dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:padding="@dimen/ecart_list_film">

    <TextView
        android:id="@+id/idFilm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"/>

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_load"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:alpha="0.8"
        android:background="@drawable/style_bordure_ombre"
        android:gravity="bottom">

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="@dimen/listPreferredItemDescriptionHeightdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/ecart_list_film"
            android:weightSum="1">

            <TextView
                android:id="@+id/titreFilm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:text="NOM FILM"

                android:textColor="@color/film_titre_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/descriptionFilm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="DESCRIPTION FILM"
                android:textColor="@color/film_titre_color"
                android:textSize="10sp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout> 