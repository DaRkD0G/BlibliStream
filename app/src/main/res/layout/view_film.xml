<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_film"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="100">

    <!-- Image entÃªte -->
    <LinearLayout
        android:id="@+id/LinearLayout_Entete_Film"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:background="@android:color/holo_red_dark"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/S2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_load" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                />

            <ImageView
                android:id="@+id/ImageView_Film"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"

                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:alpha="0.4"
                android:background="@drawable/style_bordure_ombre"
                android:gravity="center">

                <TextView
                    android:id="@+id/TextView_Entete_Titre_Film"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="TITRE DU FILM"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@drawable/style_bordure_ombre"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/TextView_Entete_Description_Film"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="DESCRIPTION" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ok2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"

        android:layout_weight="20"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/Button_Entete_Ba_Film"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/style_button_blue"
            android:text="Bande Annonce"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button_Entete_Visionner_Film"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/style_button_red"
            android:text="Visionner"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ok3"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/style_bordure_ombre"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView

            android:id="@+id/TextView_Entete_Date_Film"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="Categorie Description" />


    </LinearLayout>
</LinearLayout>