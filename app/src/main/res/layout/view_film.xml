<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LayoutPrincipalDecriptionFilm"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="266dp"
        android:layout_above="@+id/button_visio"
        android:padding="@dimen/ecart_list_film">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_film_description"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="ContentDescription_TEST"
            android:src="@drawable/fond_login"/>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/transp_fond_color"
            android:alpha="0.6"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom">

            <TextView
                style="@style/FontButtonLogin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Gode-Zilla"
                android:textSize="35sp"
                android:autoText="false"
                android:alpha="1.0"
                android:background="@android:color/transparent"
                android:clickable="true" />
        </TableRow>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In vel mauris ut enim egestas lacinia mattis eu ipsum. Vivamus at ex dui. Donec rutrum risus in egestas ornare. Morbi molestie quam vel mauris laoreet, in tempus lectus venenatis. Pellentesque porta purus vestibulum nunc fringilla, et bibendum erat condimentum. Pellentesque pellentesque libero a laoreet egestas. Aliquam erat volutpat. Mauris vestibulum leo ut sem congue maximus. Curabitur consectetur sapien vitae erat consequat vehicula."
        android:id="@+id/text_description_film_complet"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.87"
        android:padding="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Durée : 120min | Date de publication : 01/04/2012 | Coût : 3 Tokens"
        android:id="@+id/text_données_film"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_weight="0.05"
        android:padding="@dimen/activity_vertical_margin" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button_visio"
            style="@style/FontButtonLogin"
            android:layout_width="308dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#ffff78f3"
            android:text="@string/visionner" />
    </TableRow>

</LinearLayout>