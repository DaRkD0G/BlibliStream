<resources>

        <!-- Theme de l application -->
        <style name="MyTheme.Background" parent="@android:style/Theme">
            <item name="android:windowNoTitle"> true</item>
            <item name="android:windowFullscreen">true</item>
            <item name="android:windowBackground">@android:color/white</item>
        </style>

    <!-- Base application theme.
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
       Customize your theme here.
    </style>-->
    <!-- style du text du bouton view login -->
    <style name="FontButtonLogin" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:color">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">16sp</item>

        <item name="android:shadowColor">#8C000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>

    </style>

    <!-- style du EditText du bouton  view login -->
    <style name="FontEditTextLogin" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#808080</item>
        <item name="android:color">#808080</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">16sp</item>

        <item name="android:shadowColor">#10ffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>

    </style>

    <!-- style des text View Login du bouton login -->
    <style name="FontTextLogin" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#80808080</item>
        <item name="android:color">#80808080</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">10sp</item>

        <item name="android:shadowColor">#10ffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>

    </style>
    <!-- style du Toast -->
    <style name="FontToast" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#808080</item>
        <item name="android:color">#808080</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#10ffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>

    </style>

    <style name="style_menu_acceuil" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#808080</item>
        <item name="android:color">#808080</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#10ffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:background">@drawable/style_button_login</item>
    </style>
</resources>


